@{
    ViewBag.Title = "Home Page";
}

<main>
    <h1>Agenzia Spedizioni</h1>
    <p>Benvenuto nel sito dell'agenzia di spedizioni. Da qui potrai gestire le spedizioni, visualizzare lo stato delle spedizioni e tracciare le spedizioni.</p>


    <div class="row">
        @using (Html.BeginForm("Tracking", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="CodiceFiscale">Codice Fiscale o Partita Iva:</label>
                <input type="text" class="form-control" id="CodiceFiscale" name="CodiceFiscale" required>
            </div>
            <div class="form-group">
                <label for="codTracciamento">Codice Tracking:</label>
                <input type="text" class="form-control" id="codTracciamento" name="codTracciamento" required>
            </div>
            <p class="text-danger mt-2">@TempData["Message"]</p>
            <button type="submit" class="btn btn-primary">Invia</button>
        }
    </div>
</main>