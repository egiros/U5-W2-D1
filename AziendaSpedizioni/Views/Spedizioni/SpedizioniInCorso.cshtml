@model IEnumerable<AziendaSpedizioni.Models.Spedizioni>

@{
    ViewBag.Title = "SpedizioniInCorso";
}

<h2>SpedizioniInCorso</h2>


<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdSpedizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codTracciamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataSpedizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pesoSpedizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cittaDestinazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.indirizzoDestinazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nominativoDestinatario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costoSpedizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataConsegna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdStatoSpedizione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdSpedizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codTracciamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataSpedizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pesoSpedizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cittaDestinazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.indirizzoDestinazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nominativoDestinatario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costoSpedizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataConsegna)
        </td>
        <td>
            @if (item.IdStatoSpedizione == 1)
            {
                <text>Partito</text>
            }
            else
            {
                <text>In consegna</text>
            }
        </td>
        <td>
            @Html.ActionLink("Consegnato", "Consegnato", new { id = item.IdSpedizione }, new {@class = "btn btn-success mb-2"})
            @Html.ActionLink("In Consegna", "InConsegna", new { id = item.IdSpedizione }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
